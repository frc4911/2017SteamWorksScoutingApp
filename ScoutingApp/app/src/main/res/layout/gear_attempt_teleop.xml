<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin" >

    <CheckBox
        android:id="@+id/checkbox_gear_attempt_tele_op_defended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:text="DEFENDED"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/togglebutton_gear_attempt_tele_op_success"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textOff="SUCCESS"
            android:textOn="SUCCESS [X]"
            android:layout_weight="1"/>

        <ToggleButton
            android:id="@+id/togglebutton_gear_attempt_tele_op_fail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textOff="FAILURE"
            android:textOn="FAILURE [X]"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/togglebutton_gear_attempt_tele_op_human_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textOff="PILOT ERROR"
            android:textOn="PILOT ERROR [X]"
            android:layout_weight="1"/>

        <ToggleButton
            android:id="@+id/togglebutton_gear_attempt_tele_op_robot_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textOff="ROBOT ERROR"
            android:textOn="ROBOT ERROR [X]"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_gear_attempt_tele_op_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_label_clear" />
</LinearLayout>